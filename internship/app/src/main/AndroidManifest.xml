<?xml version="1.0" encoding="utf-8"?>

<manifest package="com.example.internship"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseline_swap_horizontal_circle_black_36dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.internship.CatalogActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.internship.EditorActivity"
            android:theme="@style/EditorTheme"
            android:parentActivityName="com.example.internship.CatalogActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.internship.CatalogActivity" />
        </activity>
        <activity
            android:name="com.example.internship.selection"
            android:theme="@style/selectionTheme"
            android:parentActivityName="com.example.internship.CatalogActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.internship.CatalogActivity" />
        </activity>
        <activity
            android:name="com.example.internship.transfering"
            android:theme="@style/transferingTheme"
            android:parentActivityName="com.example.internship.transaction" />
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.internship.transaction" />
        <activity
            android:name="com.example.internship.transaction"
            android:theme="@style/transactionTheme"
            android:parentActivityName="com.example.internship.selection" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.internship.selection" />
        </activity>
        <provider
            android:authorities="com.example.internship"
            android:name="com.example.internship.data.userProvider"
            android:exported="false"/>
    </application>

</manifest>